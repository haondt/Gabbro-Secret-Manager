<div class="block">
    <p class="title">Export Data</p>
    <button hx-get="/settings/manage-data/export" hx-swap="none" class="button is-dark">Export Data</button>
</div>

<div class="block">
    <p class="title">Import Data</p>
    <form 
        hx-post="/settings/manage-data/import" 
        hx-encoding="multipart/form-data" 
        hx-swap="none">
        <div class="field has-addons">
            <div class="control">
                <div class="file">
                  <label class="file-label">
                    <input 
                        id="mappings-file"
                        _="on change 
                            set files to the event's target.files
                            if files.length is 1
                                set file to files[0]
                                add .has-name to the closest .file
                                set (the next .file-name)'s innerHTML to the file's name
                                remove .is-hidden from the next .file-name
                            else
                                remove .has-name from the closest .file
                                add .is-hidden to the next .file-name
                            end
                            "
                        class="file-input" type="file" name="file" accept=".json" />
                    <span class="file-cta">
                      <span class="file-icon">
                        <i class="fas fa-upload"></i>
                      </span>
                      <span class="file-label">Choose a file… </span>
                    </span>
                    <span class="file-name is-hidden"></span>
                  </label>
                </div>
            </div>
            <div class="control">
                <button 
                    data-loading-class="is-loading"
                    class="button is-primary is-dark">
                    Import data
                </button>
            </div>
        </div>
    </form>
</div>

<div class="block">
    <p class="title">Delete Data</p>
    <article class="message is-danger">
        <div class="message-body">
            Warning: data deletion is <strong>permanent</strong> and cannot be reversed.
            Consider creating a backup using the method(s) above.
        </div>
    </article>

    <div class="field">
        <button
            hx-post="/settings/manage-data/delete-all-secrets"
            hx-confirm="This will delete all secrets, and they will not be able to be recovered. Continue?"
            hx-swap="none"
            class="button has-text-danger">Delete all secrets</button>
    </div>
</div>
