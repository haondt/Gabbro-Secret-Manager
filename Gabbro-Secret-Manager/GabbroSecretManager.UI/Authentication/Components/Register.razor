@attribute [RenderPage]
@attribute [BareLayout]

<div class="hero is-medium">
    <div class="hero-body">
        <div class="columns is-centered">
            <div class="column is-4">
                <p class="title is-2 has-text-centered">GSM</p>

                <div class="card">
                    <form class="card-content" hx-post="/authentication/register" hx-swap="none">

                        <div class="field">
                            <label class="label">Username</label>
                            <div class="control">
                                <input name="username" class="input" type="text" autocomplete="username" />
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Password</label>
                            <div class="control">
                                <input name="password" class="input" type="password" autocomplete="new-password" />
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Confirm password</label>
                            <div class="control">
                                <input name="confirm-password" class="input" type="password" autocomplete="new-password" />
                            </div>
                            <p id="errors" class="help is-danger"></p>
                        </div>
                        <div class="field">
                            <div class="control">
                                <button class="button is-primary">Register</button>
                                <a 
                                    href="/authentication/login" 
                                    hx-target="#page-container"
                                    hx-swap="innerHTML"
                                    hx-boost="true"
                                    class="button is-ghost">I already have an account</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
