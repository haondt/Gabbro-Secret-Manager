@using Gabbro_Secret_Manager.Core
@model Gabbro_Secret_Manager.Core.Views.ModalModel

<div id="modal"
	_="on closeModal add .closing
			then wait for animationend
			then trigger modalFinished(inner: the event's detail @if(!string.IsNullOrEmpty(Model.Source)){ <text>, source: '@Model.Source'</text> }) 
			then remove me">
	<div class="modal-underlay" _="on click trigger closeModal"></div>
	<div class="modal-content panel">
        @await Html.PartialAsync(Model.Content)
	</div>
</div>
